SYSTEM_WALLET_PUBLIC=GCLAVE_PUBLICA_DEL_SISTEMA_AQUI

# ============================================
# CONVERSIÓN CO2 Y TOKENS
# ============================================
# 1 tonelada de caña = 1 token tCANE
TONELADAS_POR_TOKEN=1
